{
  "manifest_version": 3,
  "name": "Miss Minutes - Focus To-Do",
  "version": "1.0.0",
  "description": "A productivity Chrome Extension combining a customizable Pomodoro timer with a to-do list and focus analytics.",
  "permissions": ["storage", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Miss Minutes - Focus To-Do",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["audio/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
